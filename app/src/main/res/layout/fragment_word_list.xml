<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <!-- 현재 카드 -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            android:textSize="24sp"
            android:textColor="@color/custom_white"
            android:layout_marginBottom="16dp" />

        <!-- 이미지 컨테이너 -->
        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/ivWordImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="@color/light_gray"
                android:contentDescription="단어 이미지" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvVocabulary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vocabulary"
            android:textSize="48sp"
            android:textColor="@color/custom_white"
            android:layout_marginBottom="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a test Sentence"
            android:textSize="20sp"
            android:textColor="@color/custom_white"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- 다음 카드 (처음에는 숨김) -->
    <LinearLayout
        android:id="@+id/nextCardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="invisible"
        android:translationY="1000dp">

        <TextView
            android:id="@+id/tvNextProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/3"
            android:textSize="24sp"
            android:textColor="@color/custom_white"
            android:layout_marginBottom="16dp" />

        <!-- 이미지 컨테이너 -->
        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/ivNextWordImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="@color/light_gray"
                android:contentDescription="다음 단어 이미지" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNextVocabulary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Word"
            android:textSize="48sp"
            android:textColor="@color/custom_white"
            android:layout_marginBottom="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNextSentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Sentence"
            android:textSize="20sp"
            android:textColor="@color/custom_white"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- 좋아요 버튼 (공유 버튼 위) -->
    <ImageButton
        android:id="@+id/btnLike"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="104dp"
        android:src="@drawable/heart"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:contentDescription="좋아요"
        android:padding="12dp"
        android:tint="@color/custom_white" />

    <!-- 공유 버튼 (오른쪽 하단 프로필 버튼 위) -->
    <ImageButton
        android:id="@+id/btnShare"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/dm"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:contentDescription="공유하기"
        android:padding="12dp"
        android:tint="@color/custom_white" />

</FrameLayout>
