<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    tools:context=".WordListMainActivity">

    <!-- 메인 콘텐츠 영역 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp" />

    <!-- 메뉴 플로팅 버튼 (왼쪽 하단) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="24dp"
        android:src="@drawable/menu"
        android:backgroundTint="@color/custom_black"
        app:tint="@color/custom_white"
        android:contentDescription="메뉴" />

    <!-- 단어 추가 플로팅 버튼 (메뉴 위) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/custom_black"
        app:tint="@color/custom_white"
        android:contentDescription="단어 추가"
        android:visibility="gone" />

    <!-- 설정 플로팅 버튼 (단어 추가 위) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="180dp"
        android:src="@drawable/profile_ic_settings"
        android:backgroundTint="@color/custom_black"
        app:tint="@color/custom_white"
        android:contentDescription="설정"
        android:visibility="gone" />

    <!-- 통계 플로팅 버튼 (설정 위) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="260dp"
        android:src="@drawable/profile_ic_statistics"
        android:backgroundTint="@color/custom_black"
        app:tint="@color/custom_white"
        android:contentDescription="통계"
        android:visibility="gone" />

    <!-- 프로필 플로팅 버튼 (우측 하단) - 일단 주석처리 -->
    <!--
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/profile_picture"
        android:backgroundTint="@color/custom_black"
        app:tint="@color/custom_white"
        android:contentDescription="프로필" />
    -->

    <!-- 아래 화살표 Lottie 애니메이션 (하단 중앙, 적당한 마진) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieDownArrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:src="@raw/down_arrow" />

</FrameLayout>
